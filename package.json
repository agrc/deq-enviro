{
  "name": "deq-enviro",
  "version": "2.0.0-1",
  "private": true,
  "description": "DEQ Interactive Map",
  "license": "MIT",
  "author": "UGRC",
  "type": "module",
  "main": "./src/functions/index.js",
  "scripts": {
    "build": "vite build",
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "dev:firebase": "export GOOGLE_APPLICATION_CREDENTIALS=\"$PWD/src/functions/functions-key-dev.json\" && firebase emulators:start --import .emulator-data --only functions",
    "dev:vite": "vite",
    "format": "prettier --write .",
    "lint": "eslint ./ --ext .js,.jsx --ignore-path ./.eslintignore",
    "lint:fix": "eslint ./ --ext .js,.jsx --quiet --fix --ignore-path ./.eslintignore",
    "prepare": "if-env NODE_ENV=production && echo 'Skipping husky install' || husky install",
    "preview": "vite preview",
    "save-firebase-state": "firebase emulators:start --import .emulator-data --export-on-exit --only functions",
    "start": "npm run dev",
    "test": "vitest --coverage",
    "coverage": "vitest run --coverage"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true,
      "node": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "react",
      "prettier",
      "import",
      "jsx-a11y",
      "react-hooks",
      "react-refresh"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react/jsx-runtime",
      "plugin:react-hooks/recommended",
      "plugin:import/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ],
    "rules": {
      "react-refresh/only-export-components": "warn"
    }
  },
  "dependencies": {
    "firebase-admin": "^11.5.0",
    "firebase-functions": "^4.2.1",
    "googleapis": "^117.0.0",
    "got": "^12.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reactfire": "^4.2.2"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.29.7",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-plugin": "^1.0.11",
    "eslint-plugin-pretty": "^0.0.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "firebase-tools": "^11.24.1",
    "husky": "^8.0.3",
    "if-env": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.6",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-packagejson": "^2.4.3",
    "vite": "^4.2.0",
    "vitest": "^0.29.7"
  }
}
